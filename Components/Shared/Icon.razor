<i class="@(ReturnPreparedHtmlClass())" style="font-size: @(Size ?? 23)pt"></i>

@code {

    [Parameter] public required string Name { get; set; }
    
    [Parameter] public int? Size { get; set; }

    [Parameter] public bool IsBrand { get; set; }

    private string ReturnPreparedHtmlClass()
    {
        if (IsBrand == true)
        {
            return $"fa-brands {Name}";
        }
        else {
            return $"fas {Name}";
        }
    }

}